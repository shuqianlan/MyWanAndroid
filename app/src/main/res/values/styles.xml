<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <declare-styleable name="CarouselLayout" >
        <attr name="duration" format="integer" />
        <attr name="start_delay" format="integer" />
        <attr name="auto_play" format="boolean" />
        <attr name="enable_touch" format="boolean" />
    </declare-styleable>

    <declare-styleable name="NetworkRefreshLayout">
        <attr name="content_main" format="reference" />
    </declare-styleable>

</resources>
