<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <import type="com.xihu.mywanandroid.ui.jetpack.viewmodels.SearchResultViewModel" />
        <import type="com.xihu.mywanandroid.ui.fragments.SearchResultFragment" />
        <variable
            name="viewModel"
            type="SearchResultViewModel" />

        <variable
            name="fragment"
            type="SearchResultFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_root_cont"
        android:onClick="@{fragment::onRetryDatas}"
        >

        <include layout="@layout/content_fragment_search_result"
            android:id="@+id/fragment_search_result_main_content"
            app:isGone="@{(viewModel.once || viewModel.error) ? true : false}"
            />

        <include layout="@layout/network_status_views" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>