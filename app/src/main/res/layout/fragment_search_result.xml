<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <import type="com.xihu.mywanandroid.ui.jetpack.viewmodels.SearchResultViewModel" />
        <import type="com.xihu.mywanandroid.ui.fragments.SearchResultFragment" />
        <variable
            name="viewModel"
            type="SearchResultViewModel" />

        <variable
            name="fragment"
            type="SearchResultFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_root_cont"
        android:onClick="@{fragment::onRetryDatas}"
        >

        <include layout="@layout/content_fragment_search_result"
            android:id="@+id/fragment_search_result_main_content"
            app:isGone="@{viewModel.error_state ? true : !viewModel.onceLoading}"
            />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loading"
            app:isGone="@{viewModel.error_state ? true : viewModel.onceLoading}"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/lottile_view"
            app:isGone="@{viewModel.loading() ? true : !viewModel.error_state}"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintDimensionRatio="H,1:1"
            app:lottie_repeatMode="restart"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/err_state"
            app:lottie_autoPlay="true"
            android:focusable="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            app:isGone="@{viewModel.loading() ? true : !viewModel.error_state}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/lottile_view"
            android:text="@string/content_err_infos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:focusable="false"
            android:layout_margin="20dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>